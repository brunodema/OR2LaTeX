{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "delete-build-folder",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
        },
        {
            "label": "cmake-precompile",
            "type": "shell",
            "dependsOn":[
                "delete-build-folder"
            ],
            "command": "cmake",
            "args": [
                "${workspaceFolder}",
                "-B",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "cmake-full-build",
            "type": "shell",
            "dependsOn": [
                "cmake-precompile"
            ],
            "command": "sudo",
            "args": [
                "cmake",
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "sudo",
            "args": [
                "cmake",
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
            {
                "label": "run-tests",
                "type": "shell",
                "command": "${workspaceFolder}/build/bin/test-BaseTypesLib && ${workspaceFolder}/build/bin/test-OR2L_Types",
                "problemMatcher": [
                    "$msCompile"
                ]
            }
    ]
}