{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "delete-build-folder",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "cmake-precompile",
            "type": "shell",
            "command": "cmake",
            "args": [
                "${workspaceFolder}",
                "-B",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "cmake-full-build",
            "type": "shell",
            "dependsOn": [
                "cmake-precompile"
            ],
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "cmake-clean-build",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "delete-build-folder",
                "cmake-full-build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "cmake-run-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/test-BaseTypesLib && ${workspaceFolder}/build/bin/test-OR2L_Types",
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}