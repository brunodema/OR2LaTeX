{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-precompile",
            "type": "shell",
            "command": "cmake",
            "args": [
                "${workspaceFolder}",
                "-B",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "dependsOn":[
                "cmake-precompile",
            ],
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "full-build",
            "type": "shell",
            "dependsOn":[
                "cmake-precompile",
                "cmake-build"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}